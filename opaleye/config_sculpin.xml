<?xml version="1.0" encoding="UTF-8"?>
<config>
	<video_path>/mnt/video/opaleye/video</video_path>
	<image_path>/mnt/video/opaleye/image</image_path>
	<log_path>/mnt/video/opaleye/log</log_path>
	<h264_mode>nv</h264_mode>

	<sensors>
		<launch>false</launch>
	</sensors>

	<zeromq>
		<launch>true</launch>
		<endpoint>tcp://0.0.0.0:51000</endpoint>
		<!--endpoint>ipc:///opaleye/feeds/0</endpoint-->
		<properties>
			<connect_timeout>5000</connect_timeout>
			<ipv6>0</ipv6>
			<linger>0</linger>
			<maxmsgsize>52428800</maxmsgsize>
			<multicast_hops>1</multicast_hops>
			<rcvbuf>104857600</rcvbuf>
			<rcvtimeo>10000</rcvtimeo>
			<sndbuf>104857600</sndbuf>
			<sndtimeo>10000</sndtimeo>
			<rcvhwm>10</rcvhwm>
			<sndhwm>10</sndhwm>
		</properties>
	</zeromq>

	<fcgi>
		<endpoint>127.0.0.1:50000</endpoint>
	</fcgi>

	<nvpmodel>
		<mode>4</mode>
	</nvpmodel>

	<cameras>
		<camera>
			<name>cam0</name>
			<type>imx219</type>

			<properties>
				<device>/dev/video0</device>
			</properties>

			<pipeline>
				<name>pipe0</name>
				<type>imx219</type>
			</pipeline>
		</camera>

		<!--camera>
			<name>cam1</name>
			<type>alvium</type>

			<properties>
				<format>XR24</format>
				<device>/dev/video1</device>
				<trigger_mode>hw</trigger_mode>
			</properties>

			<pipeline>
				<name>pipe1</name>
				<type>alvium</type>
			</pipeline>
		</camera-->

		<!--camera>
			<name>cam1</name>
			<type>virtual</type>

			<properties>
				<width>1920</width>
				<height>1280</height>
				<fps>30.0</fps>
			</properties>

			<pipeline>
				<name>pipe1</name>
				<type>virtual</type>
			</pipeline>
		</camera-->

	</cameras>
</config>
